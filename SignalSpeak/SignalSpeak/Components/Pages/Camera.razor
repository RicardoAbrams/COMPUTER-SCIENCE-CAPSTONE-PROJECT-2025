@code {
    private ElementReference _videoRef;
    private string? _status;
    private bool _starting = false;
    private bool _cameraOn = false;
    private string? _photoDataUrl;

    private async Task StartCamera()
    {
        _starting = true;
        _status = "Connecting to camera...";
        
        try 
        {
            // This calls a JavaScript function that your colleague 
            // likely put in a .js file or index.html
            await JS.InvokeVoidAsync("startVideo", _videoRef);
            _cameraOn = true;
            _status = "Camera Active - Detecting Signs...";
        }
        catch (Exception ex)
        {
            _status = $"Error: {ex.Message}";
        }
        finally 
        {
            _starting = false;
        }
    }

    private async Task StopCamera()
    {
        await JS.InvokeVoidAsync("stopVideo", _videoRef);
        _cameraOn = false;
        _status = "Camera stopped.";
    }
}