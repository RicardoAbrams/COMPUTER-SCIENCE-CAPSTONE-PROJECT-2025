@page "/camera"
@rendermode InteractiveServer
@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="ss-layout">

    <!-- Panel de chat -->
    <section class="ss-card ss-chat">
        <header class="ss-card-header">
            <h2>SignSpeak · Chat Translation</h2>
            <span class="ss-subtitle">Traducción de lenguaje de señas a texto</span>
        </header>

        <div class="ss-chat-window">
            <div class="ss-chat-bubble system">
                SYSTEM: @(_recognizedText is null ? "Waiting for sign detection..." : $"You signed: \"{_recognizedText}\"")
            </div>
        </div>

        <div class="ss-chat-input-row">
            <input class="ss-input" placeholder="Texto traducido..." value="@(_recognizedText ?? "")" readonly />
            <button class="ss-btn ss-btn-primary" disabled>Translate</button>
        </div>
    </section>

    <!-- Panel de cámara -->
    <section class="ss-card ss-camera">
        <header class="ss-card-header ss-card-header-camera">
            <div class="ss-header-icon">📷</div>
            <div>
                <h2>Live Camera / Sign Detection</h2>
                <span class="ss-subtitle">Captura y detección de señas</span>
            </div>
        </header>

        <div class="ss-camera-frame">
            <div class="ss-detected-tag">@(_status ?? "Waiting for camera...")</div>

            <video @ref="_videoRef"
                   class="ss-video"
                   autoplay
                   playsinline
                   muted>
            </video>
        </div>
    </section>

</div>

<!-- Controles -->
<div class="ss-actions-bar" style="gap:12px; flex-wrap:wrap; align-items:center;">

    <button class="ss-btn ss-btn-primary"
            @onclick="StartCamera"
            disabled="@_starting">
        @(_starting ? "Activando cámara..." : (_cameraOn ? "Camera Active" : "Activate Camera"))
    </button>

    <button class="ss-btn ss-btn-outline"
            @onclick="StopCamera"
            disabled="@(!_cameraOn)">
        Deactivate Camera
    </button>

    <div style="display:flex; align-items:center; gap:10px; margin-left:10px;">
        <label style="font-weight:600;">Mode:</label>

        <button class="ss-btn ss-btn-outline"
                @onclick="SetAnalyzeMode"
                disabled="@(!_cameraOn || _mode == "analyze")">
            Analyze Live
        </button>

        <button class="ss-btn ss-btn-outline"
                @onclick="SetCollectMode"
                disabled="@(!_cameraOn || _mode == "collect")">
            Collect Templates
        </button>
    </div>

    <div style="display:flex; align-items:center; gap:10px; margin-left:10px;">
        <label style="font-weight:600;">Label:</label>

        <select class="ss-input"
                style="width:90px;"
                @bind="_selectedLabel"
                @bind:after="OnLabelChanged"
                disabled="@(!_cameraOn)">
            @foreach (var letter in _letters)
            {
                <option value="@letter">@letter</option>
            }
        </select>

        <button class="ss-btn ss-btn-primary"
                @onclick="Record2Seconds"
                disabled="@(!_cameraOn || _mode != "collect" || _recording)">
            @(_recording ? "Recording..." : "Record Template (2s)")
        </button>

        <button class="ss-btn ss-btn-outline"
                @onclick="BuildTemplates"
                disabled="@(!_cameraOn || _building)">
            @(_building ? "Building..." : "Build templates.json")
        </button>
    </div>

</div>

@code {
    private ElementReference _videoRef;

    private IJSObjectReference? _cameraModule;
    private DotNetObjectReference<Camera>? _dotNetRef;

    private bool _cameraOn = false;
    private bool _starting = false;
    private bool _recording = false;
    private bool _building = false;

    private string? _status = "Waiting for camera...";
    private string? _recognizedText = null;

    private string _mode = "analyze";     // "analyze" | "collect"
    private string _selectedLabel = "A";  // A-Z

    private readonly string[] _letters =
        Enumerable.Range('A', 26).Select(c => ((char)c).ToString()).ToArray();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // ✅ Import ES module: wwwroot/js/camera.js
        _cameraModule = await JS.InvokeAsync<IJSObjectReference>("import", "/js/camera.js");

        _dotNetRef = DotNetObjectReference.Create(this);

        _status = "JS module loaded.";
        StateHasChanged();
    }

    private async Task StartCamera()
    {
        if (_cameraModule is null) return;

        try
        {
            _starting = true;
            _status = "Starting camera...";
            StateHasChanged();

            // ✅ tu JS exporta startCamera(videoEl, dotNetRef)
            await _cameraModule.InvokeVoidAsync("startCamera", _videoRef, _dotNetRef);

            _cameraOn = true;
            _status = "Camera active.";
            StateHasChanged();

            // set initial mode + label
            await _cameraModule.InvokeVoidAsync("setMode", _mode);
            await _cameraModule.InvokeVoidAsync("setLabel", _selectedLabel);
        }
        catch (Exception ex)
        {
            _cameraOn = false;
            _status = $"Error starting camera: {ex.Message}";
        }
        finally
        {
            _starting = false;
            StateHasChanged();
        }
    }

    private async Task StopCamera()
    {
        if (_cameraModule is null) return;

        try
        {
            // ✅ tu JS exporta stopCamera(videoEl, dotNetRef)
            await _cameraModule.InvokeVoidAsync("stopCamera", _videoRef, _dotNetRef);
            _cameraOn = false;
            _status = "Camera stopped.";
            _recognizedText = null;
        }
        catch (Exception ex)
        {
            _status = $"Error stopping camera: {ex.Message}";
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task SetAnalyzeMode()
    {
        _mode = "analyze";
        _status = "Mode: analyze (sending frames to /analyze-frame)";
        _recognizedText = null;

        if (_cameraModule is not null && _cameraOn)
            await _cameraModule.InvokeVoidAsync("setMode", _mode);

        StateHasChanged();
    }

    private async Task SetCollectMode()
    {
        _mode = "collect";
        _status = "Mode: collect (saving samples to /collect-template?label=...)";
        _recognizedText = null;

        if (_cameraModule is not null && _cameraOn)
            await _cameraModule.InvokeVoidAsync("setMode", _mode);

        StateHasChanged();
    }

    private async Task OnLabelChanged()
    {
        if (_cameraModule is not null && _cameraOn)
            await _cameraModule.InvokeVoidAsync("setLabel", _selectedLabel);

        _status = $"Label selected: {_selectedLabel}";
        StateHasChanged();
    }

    private async Task Record2Seconds()
    {
        if (_cameraModule is null || !_cameraOn) return;
        if (_mode != "collect") return;

        try
        {
            _recording = true;
            _status = $"Recording {_selectedLabel} for 2 seconds... hold still ✋";
            StateHasChanged();

            // ✅ tu JS exporta recordForMs(ms)
            await _cameraModule.InvokeVoidAsync("recordForMs", 2000);

            _status = $"Recorded samples for {_selectedLabel}. (Check pythonBackend/templates_data/{_selectedLabel})";
        }
        catch (Exception ex)
        {
            _status = $"Record error: {ex.Message}";
        }
        finally
        {
            _recording = false;
            StateHasChanged();
        }
    }

    private async Task BuildTemplates()
    {
        // Llama al backend python directamente (POST /build-templates)
        try
        {
            _building = true;
            _status = "Building templates.json ...";
            StateHasChanged();

            using var http = new HttpClient();
            using var resp = await http.PostAsync("http://localhost:8000/build-templates", content: null);

            if (resp.IsSuccessStatusCode)
            {
                var text = await resp.Content.ReadAsStringAsync();
                _status = $"templates.json generated ✅  {text}";
            }
            else
            {
                _status = $"Failed to build templates.json ❌  HTTP {(int)resp.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _status = $"Build templates error: {ex.Message}";
        }
        finally
        {
            _building = false;
            StateHasChanged();
        }
    }

    // JS -> C#
    [JSInvokable]
    public Task UpdateRecognizedText(string? text)
    {
        _recognizedText = text;
        return InvokeAsync(StateHasChanged);
    }

    // JS -> C#
    [JSInvokable]
    public Task UpdateStatus(string text)
    {
        _status = text;
        return InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        _dotNetRef?.Dispose();
        if (_cameraModule is not null)
            await _cameraModule.DisposeAsync();
    }
}
