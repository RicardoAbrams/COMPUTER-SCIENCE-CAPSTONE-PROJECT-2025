@page "/camera"
@rendermode InteractiveServer
@using Microsoft.JSInterop
@implements IAsyncDisposable
@inject IJSRuntime JS

<div class="ss-layout">

    <!-- Panel de chat -->
    <section class="ss-card ss-chat">
        <header class="ss-card-header">
            <h2>SignSpeak · Chat Translation</h2>
            <span class="ss-subtitle">Traducción de lenguaje de señas a texto</span>
        </header>

        <div class="ss-chat-window">
            <div class="ss-chat-bubble system">
                SYSTEM: @(_recognizedText is null ? "Waiting for sign detection..." : $"You signed: \"{_recognizedText}\"")
            </div>
        </div>

        <div class="ss-chat-input-row">
            <input class="ss-input" placeholder="Texto traducido..." value="@(_recognizedText ?? "")" disabled />
            <button class="ss-btn ss-btn-primary" disabled>Translate</button>
        </div>
    </section>

    <!-- Panel de cámara -->
    <section class="ss-card ss-camera">
        <header class="ss-card-header ss-card-header-camera">
            <div class="ss-header-icon">📷</div>
            <div>
                <h2>Live Camera / Sign Detection</h2>
                <span class="ss-subtitle">Captura y detección de señas</span>
            </div>
        </header>

        <div class="ss-camera-frame">
            <div class="ss-detected-tag">@_status</div>

            <video @ref="_videoRef"
                   class="ss-video"
                   autoplay
                   playsinline
                   muted>
            </video>
        </div>
    </section>

</div>

<div class="ss-actions-bar">
    <button class="ss-btn ss-btn-primary" @onclick="StartCamera" disabled="@_starting">
        @(_starting ? "Activando cámara..." : "Activate Camera")
    </button>

    <button class="ss-btn ss-btn-outline" @onclick="StopCamera" disabled="@(!_cameraOn)">
        Deactivate Camera
    </button>
</div>

@code {
    private ElementReference _videoRef;
    private IJSObjectReference? _cameraModule;
    private DotNetObjectReference<CameraPage>? _dotNetRef;

    private bool _cameraOn = false;
    private bool _starting = false;

    private string _status = "Waiting for camera...";
    private string? _recognizedText;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // Importa ES module (NO usar <script src="...">)
        _cameraModule = await JS.InvokeAsync<IJSObjectReference>(
            "import", "/js/Camera.js"
        );

        _dotNetRef = DotNetObjectReference.Create(new CameraPage(this));
        _status = "JS module loaded correctly.";
        StateHasChanged();
    }

    private async Task StartCamera()
    {
        if (_cameraModule is null) return;

        _starting = true;
        _status = "Starting camera...";
        StateHasChanged();

        try
        {
            _cameraOn = true;
            await _cameraModule.InvokeVoidAsync("startCamera", _videoRef, _dotNetRef);
        }
        catch (Exception ex)
        {
            _cameraOn = false;
            _status = "Error starting camera: " + ex.Message;
        }
        finally
        {
            _starting = false;
            StateHasChanged();
        }
    }

    private async Task StopCamera()
    {
        if (_cameraModule is null) return;

        try
        {
            await _cameraModule.InvokeVoidAsync("stopCamera", _videoRef, _dotNetRef);
        }
        finally
        {
            _cameraOn = false;
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (_cameraModule is not null)
                await _cameraModule.DisposeAsync();
        }
        catch { }

        _dotNetRef?.Dispose();
    }

    // Clase para callbacks JS -> .NET
    private sealed class CameraPage
    {
        private readonly Camera _parent;
        public CameraPage(Camera parent) => _parent = parent;

        [JSInvokable]
        public Task UpdateRecognizedText(string? text)
        {
            _parent._recognizedText = text;
            return _parent.InvokeAsync(_parent.StateHasChanged);
        }

        [JSInvokable]
        public Task UpdateStatus(string status)
        {
            _parent._status = status;
            return _parent.InvokeAsync(_parent.StateHasChanged);
        }
    }
}
