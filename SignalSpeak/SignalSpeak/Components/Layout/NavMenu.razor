@using System
@using System.Threading.Tasks
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using SignalSpeak.Data

@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SignalSpeak</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        @if (isAuthenticated)
        {
            <!-- PROFILE CARD -->
            <div class="px-3 py-3 text-white" style="border-bottom:1px solid rgba(255,255,255,.15);">
                <div style="display:flex; gap:12px; align-items:center;">
                    <div style="width:44px;height:44px;border-radius:50%;
                                    background:rgba(255,255,255,.2);
                                    display:flex;align-items:center;justify-content:center;
                                    font-weight:700;">
                        @Initials
                    </div>

                    <div style="line-height:1.2;">
                        <div style="font-weight:700;">@DisplayName</div>
                        <div style="font-size:.85rem; opacity:.85;">@Email</div>
                    </div>
                </div>

                <div class="mt-2">
                    <NavLink class="nav-link text-white" href="/profile">
                        <span class="bi bi-person-circle" aria-hidden="true"></span> My Profile
                    </NavLink>
                </div>
            </div>
        }

        <!-- DASHBOARD -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <!-- TRANSLATE -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Camera">
                <i class="fi fi-sr-language" style="font: 25px"></i>
                <span>Translate</span>
            </NavLink>
        </div>

        <!-- ABOUT -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="aboutus">
                <span class="bi bi-info-circle-fill" aria-hidden="true"></span> About us
            </NavLink>
        </div>

        <hr class="text-white mx-3" />

        @if (isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Account/Logout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Log out
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Account/Login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Account/Register">
                    <span class="bi bi-person-plus" aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private bool isAuthenticated;

    private string DisplayName = "";
    private string Email = "";
    private string Initials = "?";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;

        isAuthenticated = principal.Identity?.IsAuthenticated ?? false;
        if (!isAuthenticated) return;

        var user = await UserManager.GetUserAsync(principal);
        if (user is null) return;

        Email = user.Email ?? user.UserName ?? "";

        var fullName = (user.DisplayName ?? "").Trim();
        DisplayName = string.IsNullOrWhiteSpace(fullName) ? Email : fullName;

        Initials = BuildInitials(user.FirstName, user.LastName, DisplayName);
    }

    private static string BuildInitials(string? first, string? last, string fallback)
    {
        string a = string.IsNullOrWhiteSpace(first) ? "" : first.Trim().Substring(0, 1).ToUpper();
        string b = string.IsNullOrWhiteSpace(last) ? "" : last.Trim().Substring(0, 1).ToUpper();

        var initials = (a + b).Trim();
        if (!string.IsNullOrWhiteSpace(initials)) return initials;

        return string.IsNullOrWhiteSpace(fallback) ? "?" : fallback.Trim().Substring(0, 1).ToUpper();
    }
}