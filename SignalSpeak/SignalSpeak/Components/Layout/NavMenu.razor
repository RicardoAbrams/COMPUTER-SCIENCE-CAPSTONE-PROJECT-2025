@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SignSpeak</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Static navigation links -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/camera">
                <img src="icons/translate.png" class="nav-icon" /> Translate
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/counter">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/weather">
                <span class="bi bi-list-nested-nav-menu"></span> Weather
            </NavLink>
        </div>

        <!-- Auth-based navigation -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center" href="/registerSuccess">
                        <span class="bi bi-person-circle nav-menu-icon"></span>
                        <span>Profile</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <a class="nav-link d-flex align-items-center" href="/Identity/Account/Logout">
                        <span class="bi bi-box-arrow-right nav-menu-icon"></span>
                        <span>Logout</span>
                    </a>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center" href="/Identity/Account/Login">
                        <span class="bi bi-box-arrow-right nav-menu-icon"></span>
                        <span>Login</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center" href="/Identity/Account/Register">
                        <span class="bi bi-person-plus nav-menu-icon"></span>
                        <span>Sign up</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>
