@page
@model LoginModel

<h2>Login</h2>

<form method="post">
    <div>
        <input asp-for="Input.Email" placeholder="Email" />
    </div>

    <div>
        <input asp-for="Input.Password" type="password" placeholder="Password" />
    </div>

    <button type="submit">Login</button>

    <div asp-validation-summary="All"></div>
</form>